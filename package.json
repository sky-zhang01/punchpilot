{
  "name": "punchpilot",
  "version": "0.3.0",
  "description": "Smart attendance automation for freee HR - auto clock-in/out with Web GUI and intelligent scheduling",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "dev": "node --watch server/server.js",
    "install-browsers": "playwright install",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:security": "npx eslint --config eslint.config.mjs 'server/**/*.js'",
    "audit": "npm audit",
    "scan:dockerfile": "hadolint Dockerfile"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.6.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "node-cron": "^4.2.1",
    "playwright": "^1.58.2"
  },
  "keywords": [
    "freee",
    "attendance",
    "automation",
    "playwright",
    "scheduler",
    "docker"
  ],
  "author": "sky-zhang01",
  "repository": {
    "type": "git",
    "url": "https://github.com/sky-zhang01/punchpilot.git"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-security": "^3.0.1",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  }
}
